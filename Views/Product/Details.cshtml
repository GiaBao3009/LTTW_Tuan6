@model LTTW_Tuan6.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<h1>Chi tiết sản phẩm</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">
                    <strong>Mã sản phẩm:</strong> @Model.Id
                </p>
                <p class="card-text">
                    <strong>Giá bán:</strong> @Model.Price.ToString("N0") VNĐ
                </p>
                <p class="card-text">
                    <strong>Mô tả:</strong> @Model.Description
                </p>
                <p class="card-text">
                    <strong>Danh mục:</strong> @Model.Category?.Name
                </p>
            </div>
        </div>

        <div class="mt-4">
            <h4>Hình ảnh sản phẩm</h4>
            <div class="row">
                @if (Model.Images != null && Model.Images.Any())
                {
                    foreach (var image in Model.Images)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <img src="@image.Url" class="card-img-top" alt="Product image"
                                     style="height: 200px; object-fit: cover;">
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <p class="text-muted">Chưa có hình ảnh</p>
                    </div>
                }
            </div>
        </div>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
            <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </div>
</div>