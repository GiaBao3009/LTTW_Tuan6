@{
    ViewData["Title"] = "Truy cập bị từ chối";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mt-5">
                <div class="card-body text-center">
                    <h1 class="text-danger">
                        <i class="fas fa-exclamation-triangle"></i>
                        @ViewData["Title"]
                    </h1>
                    <p class="lead">Bạn không có quyền truy cập vào trang này.</p>
                    <div class="mt-4">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                            <i class="fas fa-home"></i> Về trang chủ
                        </a>
                        <a asp-action="Login" class="btn btn-secondary">
                            <i class="fas fa-sign-in-alt"></i> Đăng nhập với tài khoản khác
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>